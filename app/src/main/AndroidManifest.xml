<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.habeat" >

    <!--Needed User Permissions-->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--Handles an exception on Seaver's device-->
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Intro"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>

        <activity
            android:name = ".supportgroup.SupportGroupActivity"
            android:label = "SupportGroupActivity"
            android:parentActivityName = ".MainActivity"
            android:theme = "@style/AppTheme">
        </activity>
        <activity
            android:name=".selfhelp.deepbreathing.DeepBreathingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_deep_breathing"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".selfhelp.urgesurfing.UrgeSurfingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_urge_surfing"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".selfhelp.selfmassage.SelfMassageActivity"
            android:label="@string/title_activity_self_massage" >
        </activity>

    </application>



</manifest>
